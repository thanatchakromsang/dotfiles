#############################
### settings for i3-gaps: ###
#############################

# Set inner/outer gaps
gaps inner 0
gaps outer 0

# Additionally, you can issue commands with the following syntax. This is useful to bind keys to changing the gap size.
# gaps inner|outer current|all set|plus|minus <px>
# gaps inner all set 10
# gaps outer all plus 5

# Smart gaps (gaps used if only more than one container on the workspace)
# smart_gaps on

# Smart borders (draw borders around container only if it is not the only container on this workspace)
# on|no_gaps (on=always activate and no_gaps=only activate if the gap size to the edge of the screen is 0)
smart_borders on

# resize window (you can also use the mouse for that)
bindsym $mod+r mode "resize"
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the windowâ€™s width.
        # Pressing right will grow the windowâ€™s width.
        # Pressing up will shrink the windowâ€™s height.
        # Pressing down will grow the windowâ€™s height.
        bindsym h resize shrink width 5 px or 5 ppt
        bindsym j resize grow height 5 px or 5 ppt
        bindsym k resize shrink height 5 px or 5 ppt
        bindsym l resize grow width 5 px or 5 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 5 px or 5 ppt
        bindsym Down resize grow height 5 px or 5 ppt
        bindsym Up resize shrink height 5 px or 5 ppt
        bindsym Right resize grow width 5 px or 5 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

set $logout_system (l) lock, (o) logout, (s) suspend, (r) reboot, (p) poweroff
bindsym Delete mode "$logout_system"
mode "$logout_system" {
    bindsym l exec --no-startup-id $psst ~/.config/i3/i3exit.sh lock, mode "default"
    bindsym o exec --no-startup-id $psst ~/.config/i3/i3exit.sh logout, mode "default"
    bindsym s exec --no-startup-id $psst ~/.config/i3/i3exit.sh suspend, mode "default"
    bindsym r exec --no-startup-id $psst ~/.config/i3/i3exit.sh reboot, mode "default"
    bindsym p exec --no-startup-id $psst ~/.config/i3/i3exit.sh poweroff, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

#####################
### Multi monitor ###
#####################

set $mode_output (i) intern, (e) extern, (c) clone, (x) extend (v) virtual (r) rotate
bindsym $mod+F4 mode "$mode_output"
mode "$mode_output" {
    bindsym i exec --no-startup-id $psst ~/.config/i3/i3monitor.sh hdmi intern, mode "default"
    bindsym e exec --no-startup-id $psst ~/.config/i3/i3monitor.sh hdmi extern, mode "default"
    bindsym c exec --no-startup-id $psst ~/.config/i3/i3monitor.sh hdmi clone, mode "default"
    bindsym x exec --no-startup-id $psst ~/.config/i3/i3monitor.sh hdmi extend, mode "default"
    bindsym v exec --no-startup-id $psst ~/.config/i3/i3monitor.sh hdmi virtual, mode "default"
    bindsym r exec --no-startup-id $psst ~/.config/i3/i3monitor.sh rotate, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

###########################
### Screen manipulation ###
###########################

set $mode_print (f) fullscreen, (s) select, (r) record
bindsym Print mode "$mode_print"
mode "$mode_print" {
    bindsym f exec --no-startup-id "DATE=$(date +'%Y-%m-%d-%T'); SCREENSHOT_PATH=~/Pictures/Screenshot/maim-$DATE; maim -u $SCREENSHOT_PATH; xclip -selection clipboard -t image/png $SCREENSHOT_PATH; xdg-open $SCREENSHOT_PATH", mode "default"
    bindsym --release s exec --no-startup-id "DATE=$(date +'%Y-%m-%d-%T'); SCREENSHOT_PATH=~/Pictures/Screenshots/maim-$DATE.png; maim -s -u $SCREENSHOT_PATH; xclip -selection clipboard -t image/png $SCREENSHOT_PATH; xdg-open $SCREENSHOT_PATH", mode "default"
    bindsym --release r exec --no-startup-id "simplescreenrecorder", mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

