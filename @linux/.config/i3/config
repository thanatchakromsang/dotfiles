set $application open (1) bluetoothctl (2) sound-manager
bindsym $mod+F1 mode "$application"
mode "$application" {
    bindsym 1 exec $term -e bluetoothctl
    bindsym 2 exec --no-startup-id pavucontrol, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
