[colors]
base00 = ${xrdb:color0:#000000}
base01 = ${xrdb:color10:#000000}
base02 = ${xrdb:color11:#000000}
base03 = ${xrdb:color8:#000000}
base04 = ${xrdb:color12:#000000}
base05 = ${xrdb:color7:#000000}
base06 = ${xrdb:color13:#000000}
base07 = ${xrdb:color15:#000000}
base08 = ${xrdb:color1:#000000}
base09 = ${xrdb:color9:#000000}
base0A = ${xrdb:color3:#000000}
base0B = ${xrdb:color2:#000000}
base0C = ${xrdb:color6:#000000}
base0D = ${xrdb:color4:#000000}
base0E = ${xrdb:color5:#000000}
base0F = ${xrdb:color14:#000000}

background = ${colors.base03}
background-alt = ${colors.base03}
foreground = ${colors.base07}
foreground-alt = ${colors.base07}
primary = ${colors.base0B}
secondary = ${colors.base07}
alert = ${colors.base09}

[bar/top]
monitor = ${env:MONITOR:}
width = 100%
height = 20

background = ${colors.base00}
foreground = ${colors.foreground}

fixed-center = true

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

; The separator will be inserted between the output of each module
separator = \

font-0 = FontAwesome:pixelsize=11;1
font-1 = icons\-in\-terminal:pixelsize=11;2
font-2 = MesloLGM Nerd Font:size=10:weight=bold;2
font-3 = Material Icons:style=Regular:size=11;1

modules-left = i3 taskwarrior
modules-center = music
; modules-right = keyboard wireless-network volume xbacklight battery temperature powermenu
modules-right = keyboard volume xbacklight battery wireless-network date

; tray-position = right
; tray-padding = 2

;tray-transparent = true
;tray-background = #0063ff

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

; [module/crypto]
; type = custom/script
; interval = 1000
; exec = /home/thanatchaya/.config/polybar/crypto.py

cursor-click = pointer
; cursor-scroll = ns-resize

[module/volume]
type = internal/volume

; Soundcard to be used
master-soundcard = default

; Name of the master mixer
; Default: Master
master-mixer = Master

; Use volume mapping (similar to amixer -M and alsamixer), where the increase in volume is linear to the ear
; Default: false
mapped = false

format-volume = <ramp-volume> <label-volume>

label-muted =  muted
label-muted-foreground = #66

; Only applies if <ramp-volume> is used
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/keyboard]
type = internal/xkeyboard

; List of indicators to ignore
blaclist-0 = num lock
blacklist-1 = scroll lock
format =  <label-layout>
format-spacing = 0

label-layout =  %name%
; label-layout-padding = 2
label-layout-foreground = ${bar/top.foreground}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
; index-sort = true
wrapping-scroll = false
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;

; Only show workspaces on the same output as the bar
pin-workspaces = true

padding = 1
label-mode-padding = 2
label-mode-foreground = #555
label-mode-background = ${colors.base06}

; focused = Active workspace on focused monitor
label-focused = %index% :%icon% (F)
label-focused-background = ${colors.background-alt}
label-focused-underline = ${colors.base06}
label-focused-padding = ${self.padding}

; visible = Active workspace on unfocused monitor
label-visible = %index% :%icon% (V)
label-visible-background = ${colors.background-alt}
label-visible-underline = ${colors.base01}
label-visible-padding = ${self.padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = %index% :%icon%
label-unfocused-padding = ${self.padding}

; urgent = Workspace with urgency hint set
label-urgent = %index% :%icon% (U)
label-urgent-background = ${colors.background-alt}
label-urgent-underline= ${colors.alert}
label-urgent-padding = ${self.padding}

[module/xbacklight]
type = internal/xbacklight
enable-scroll = false

format = <ramp> <label>
label = %percentage%%
ramp-0 = 
ramp-1 = 
ramp-2 = 

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/wireless-network]
type = internal/network
interface = wlo1
interval = 3.0
ping-interval = 10

format-connected = <ramp-signal> <label-connected>
label-connected = %essid%
label-disconnected = wifi not connected
label-disconnected-foreground = #66

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
animation-packetloss-0 = 
animation-packetloss-0-foreground = #ffa64c
animation-packetloss-1 = 
animation-packetloss-1-foreground = ${bar/top.foreground}
animation-packetloss-framerate = 500

[module/date]
type = internal/date
interval = 5

date = %a %b %d,
time = %H:%M

format = <label>
label =  %date% %time%

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98

format-charging = <animation-charging> <label-charging>

format-discharging = <ramp-capacity> <label-discharging>

label-full =  Full

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
; Framerate in milliseconds
animation-charging-framerate = 500

[module/temperature]
type = internal/temperature
interval = 5
thermal-zone = 0
warn-temperature = 80

format = <ramp> <label>
format-warn = <ramp> <label-warn>

label = %temperature%
label-warn = %temperature%
label-warn-foreground = #e4b226

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = 
label-open-foreground = ${colors.base07}
label-close = cancel
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = poweroff
menu-0-1-exec = menu-open-2

menu-1-0 = reboot
menu-1-0-exec = reboot

menu-2-0 = poweroff
menu-2-0-exec = poweroff

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

[module/music]
type = custom/script
format = <label>
label =   %output%

exec = if [[ "$(playerctl status)" = "Playing" ]]; then playerctl metadata xesam:artist; echo -n " - "; playerctl metadata xesam:title; else echo -n " Play music"; fi
exec-if = [[ "$(playerctl status)" = "Playing" || "$(playerctl status)" = "Paused" ]] && echo "0"
click-left = playerctl play-pause
click-right = playerctl next
interval = 1

[module/title]
type = internal/xwindow

; Available tags:
;   <label> (default)
format = <label>
; format-background = #f00
; format-foreground = #000
; format-padding = 2

; Available tokens:
;   %title%
; Default: %title%
label = %title%
label-maxlen = 50

[module/taskwarrior]
interval = 10
type = custom/script
exec = ~/.config/polybar/task_polybar.sh
format = <label>
format-foreground = #FFF
format-prefix = " "
click-left = task "$((`cat /tmp/tw_polybar_id`))" done

; [module/crypto]
; type = custom/script
; interval = 1000
; exec = /home/thanatchaya/.config/polybar/crypto.py


