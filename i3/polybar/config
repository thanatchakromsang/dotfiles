[colors]
; grey
background = ${xrdb:background:#000000}
; white
foreground = ${xrdb:foreground:#000000}
; black
base00 = ${xrdb:color0:#000000}
; light green
base01 = ${xrdb:color10:#000000}
; yellow
base02 = ${xrdb:color11:#000000}
; grey more than bg
base03 = ${xrdb:color8:#000000}
; light purple
base04 = ${xrdb:color12:#000000}
; light grey
base05 = ${xrdb:color7:#000000}
; pink
base06 = ${xrdb:color13:#000000}
; almost white
base07 = ${xrdb:color15:#000000}
; red almost orange
base08 = ${xrdb:color1:#000000}
; lighter than red
base09 = ${xrdb:color9:#000000}
; yellow
base0A = ${xrdb:color3:#000000}
; green
base0B = ${xrdb:color2:#000000}
; blue
base0C = ${xrdb:color6:#000000}
; purple
base0D = ${xrdb:color4:#000000}
; pink
base0E = ${xrdb:color5:#000000}
; light blue
base0F = ${xrdb:color14:#000000}

background-alt = ${colors.base03}
foreground-alt = ${colors.base07}
alert = ${colors.base09}

[global/wm]
margin-top = 0
margin-bottom = 0
override-redirect = true

[bar/top]
monitor = ${env:MONITOR:}
width = 100%
height = 24
offset-x = 0
offset-y = 0

; background = ${colors.base00}
background = ${colors.background}
foreground = ${colors.foreground}

fixed-center = true

line-size = 3
line-color = ${colors.foreground}

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

; The separator will be inserted between the output of each module
; separator = \

font-0 = FontAwesome:pixelsize=11;1
font-1 = icons\-in\-terminal:pixelsize=11;2
font-2 = MesloLGM Nerd Font:size=10:weight=bold;2
font-3 = Material Icons:style=Regular:size=11;1

modules-left = i3 taskwarrior
modules-center = music
; modules-right = keyboard wireless-network volume xbacklight battery temperature powermenu
modules-right = keyboard volume backlight-acpi battery wireless-network date

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

cursor-click = pointer
; cursor-scroll = ns-resize

[module/volume]
type = internal/volume

; Soundcard to be used
master-soundcard = default

; Name of the master mixer
; Default: Master
master-mixer = Master

; Use volume mapping (similar to amixer -M and alsamixer), where the increase in volume is linear to the ear
; Default: false
mapped = false

format-volume = <ramp-volume> <label-volume>
format-volume-padding = 2
format-volume-background = ${colors.base0F}
format-volume-foreground = ${colors.base00}

label-muted =  muted
label-muted-padding = 2
label-muted-background = ${colors.base0F}
label-muted-foreground = ${colors.base00}

; Only applies if <ramp-volume> is used
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/keyboard]
type = internal/xkeyboard

; List of indicators to ignore
blaclist-0 = num lock
blacklist-1 = scroll lock
format =  <label-layout>
format-spacing = 0

label-layout =  %layout%
label-layout-padding = 2
label-layout-background = ${colors.base09}
label-layout-foreground = ${colors.base00}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
; index-sort = true
wrapping-scroll = false
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;

; Only show workspaces on the same output as the bar
pin-workspaces = true

padding = 3

label-mode-foreground = ${colors.base00}
label-mode-background = ${colors.base0D}

; focused = Active workspace on focused monitor
label-focused = %index% :%icon%
label-focused-foreground = ${colors.base00}
label-focused-background = ${colors.base0D}
; label-focused-underline = ${colors.base0E}
label-focused-padding = ${self.padding}

; visible = Active workspace on unfocused monitor
label-visible = %index% :%icon%
label-visible-background = ${colors.base0E}
label-visible-foreground = ${colors.base00}
label-visible-padding = ${self.padding}

; urgent = Workspace with urgency hint set
label-urgent = %index% :%icon%
label-urgent-background = ${colors.alert}
label-urgent-foreground = ${colors.base00}
label-urgent-padding = ${self.padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = %index% :%icon%
label-unfocused-padding = ${self.padding}

[module/xbacklight]
type = internal/xbacklight
enable-scroll = false

format = <ramp> <label>
