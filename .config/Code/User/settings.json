{
  // Editor setting
  "breadcrumbs.enabled": true,
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.cursorBlinking": "solid",
  "editor.fontFamily": "Fantasque Sans Mono",
  "editor.fontSize": 14,
  "editor.fontWeight": "normal",
  "editor.formatOnSave": false,
  "editor.glyphMargin": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.lightbulb.enabled": false,
  "editor.lineNumbers": "relative",
  "editor.quickSuggestionsDelay": 100,
  "editor.renderControlCharacters": true,
  "editor.renderIndentGuides": true,
  "editor.selectionHighlight": false,
  "editor.tabSize": 2,
  "editor.wordWrap": "off",
  "editor.wordWrapColumn": 80,
  "editor.tabCompletion": "on",
  "editor.suggestOnTriggerCharacters": false,
  "window.enableMenuBarMnemonics": false,
  "editor.rulers": [80, 100, 120],
  // Workbench
  "workbench.colorTheme": "Gruvbox Dark (Soft)",
  "workbench.activityBar.visible": false,
  "workbench.commandPalette.preserveInput": false,
  // "workbench.editor.openPositioning": "right",
  "workbench.tips.enabled": false,
  "workbench.editor.tabCloseButton": "off",
  "workbench.list.openMode": "doubleClick",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.labelFormat": "short",
  // Window
  "window.titleBarStyle": "native",
  "window.zoomLevel": -1,
  "window.closeWhenEmpty": true,
  "window.menuBarVisibility": "hidden",
  "workbench.colorCustomizations": {
    "statusBar.background": "#3c3836",
    "statusBar.noFolderBackground": "#282828",
    "statusBar.debuggingBackground": "#282828",
    "statusBar.foreground": "#a89984"
  },
  // Vim
  "vim.easymotion": true,
  "vim.easymotionKeys": "hklyuiopnmqwertzxcvbasdgjf",
  "vim.easymotionMarkerFontFamily": "Fantasque Sans Mono",
  "vim.searchHighlightColor": "#a89984",
  "vim.easymotionMarkerYOffset": 5,
  "vim.enableNeovim": true,
  "vim.neovimPath": "nvim",
  "vim.handleKeys": {
    "<C-f>": false,
    "<C-d>": true,
    "<C-u>": true
  },
  "vim.foldfix": false,
  "vim.leader": ",",
  "vim.scroll": 10,
  "vim.sneak": true,
  "vim.textwidth": 100,
  "vim.useSystemClipboard": true,
  "vim.incsearch": true,
  "vim.showcmd": true,
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    // gh - show the hover tooltip.
    // gb - add an additional cursor at the next place that matches *
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },
    {
      "before": ["J"],
      "after": ["5", "j"]
      // // Fix unfold by accident
      // "before": [
      //   "J"
      // ],
      // "after": [
      //   "5",
      //   "g",
      //   "j"
      // ]
    },
    {
      "before": ["K"],
      "after": ["5", "k"]
      // // Fix unfold by accident
      // "before": [
      //   "K"
      // ],
      // "after": [
      //   "5",
      //   "g",
      //   "k"
      // ]
    },
    // gf behavior in vim
    {
      "before": ["g", "f"],
      "after": [],
      "commands": [
        {
          "command": "editor.action.goToDeclaration"
        }
      ]
    },
    {
      "before": ["leader", "c"],
      "commands": [
        {
          "command": "workbench.action.closeActiveEditor"
        }
      ]
    },
    {
      "before": ["leader", "r"],
      "commands": [
        {
          "command": "workbench.action.gotoSymbol"
        }
      ]
    },
    {
      "before": ["leader", "t"],
      "commands": [
        {
          "command": "workbench.action.showAllSymbols"
        }
      ]
    },
    {
      "before": ["leader", "s", "h"],
      "commands": [
        {
          "command": "workbench.action.terminal.toggleTerminal"
        }
      ]
    },
    {
      "before": ["leader", "f"],
      "commands": [
        {
          "command": "workbench.action.findInFiles"
        }
      ]
    },
    {
      "before": ["leader", "e"],
      "commands": [
        {
          "command": "workbench.action.quickOpen"
        }
      ]
    },
    {
      "before": ["leader", "v"],
      "commands": [
        {
          "command": ":vsplit"
        }
      ]
    },
    {
      "before": ["leader", "b"],
      "commands": [
        {
          "command": ":split"
        }
      ]
    },
    {
      "before": ["<C-n"],
      "after": ["g", "b"]
    }
    // // Easymotion search instead of /
    // {
    //   "before": [
    //     "/"
    //   ],
    //   "after": [
    //     "<leader>",
    //     "<leader>",
    //     "/"
    //   ]
    // },
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    },
    // Bind p in visual mode to paste without overriding the current register
    {
      "before": ["p"],
      "after": ["p", "g", "v", "y"]
    }
  ],
  // Scrolloff (vim-like behavior)
  "scrolloff.scrolloff": 5,
  // Files
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.vscode": true,
    "**/__pycache__": true,
    "**/dist": true
  },
  // Search
  "search.smartCase": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true
  },
  // Fix caps lock enter
  "keyboard.dispatch": "keyCode",
  // Terminal
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.fontWeightBold": "normal",
  // Git lens
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
    "suppressResultsExplorerNotice": false,
    "suppressShowKeyBindingsNotice": true
  },
  "gitlens.blame.format": "${id|8-} ${author|25?} ${agoOrDate|14-}",
  "gitlens.blame.heatmap.enabled": false,
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.defaultDateStyle": "absolute",
  "gitlens.keymap": "none",
  "gitlens.historyExplorer.enabled": false,
  "gitlens.codeLens.scopes": ["document", "containers"],
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.defaultDateFormat": "YYYY-MM-DD HH:mm:ss",
  "gitlens.explorers.avatars": false,
  "gitlens.blame.avatars": false,
  "gitlens.blame.compact": false,
  "gitlens.blame.highlight.locations": ["gutter"],
  "gitlens.hovers.annotations.over": "annotation",
  "gitlens.hovers.annotations.details": false,
  "gitlens.recentChanges.highlight.locations": ["line", "gutter", "overview"],
  "gitlens.statusBar.reduceFlicker": true,
  "gitlens.statusBar.format": "${authorAgo}",
  // Language Specific
  // // Typescript linter
  "tslint.autoFixOnSave": true,
  "tslint.run": "onSave",
  "typescript.updateImportsOnFileMove.enabled": "never",
  "typescript.suggest.autoImports": false,
  "typescript.suggest.completeFunctionCalls": true,
  // // Javascript linter
  "eslint.autoFixOnSave": true,
  "eslint.run": "onSave",
  "prettier.eslintIntegration": true,
  // // Python
  "python.linting.flake8Enabled": true,
  "python.linting.pylintEnabled": false,
  // // Dart
  "dart.flutterSdkPath": "flutter",
  // Emmet
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "vue-html": "html"
  },
  "emmet.showSuggestionsAsSnippets": true,
  // NPM
  "npm-intellisense.showBuildInLibs": true,
  // Path intellisense
  "path-intellisense.autoSlashAfterDirectory": true,
  "workbench.statusBar.visible": true,
  "git.confirmSync": false,
  "workbench.iconTheme": "simple-icons",
  "vsintellicode.python.completionsEnabled": false,
  "editor.minimap.enabled": false,
  "editor.minimap.maxColumn": 100,

  // Zen mode
  "zenMode.centerLayout": false,
  "zenMode.fullScreen": false,
  "zenMode.hideStatusBar": false,
  "zenMode.restore": true,
  "files.associations": {
    "*.js": "javascript"
  },
  "python.unitTest.pyTestEnabled": true,
  "terminal.integrated.rendererType": "dom",
  "latex-workshop.view.pdf.viewer": "tab",
  "window.openFilesInNewWindow": "default",

  // Latex
  "latex-workshop.docker.enabled": true,
  "latex-workshop.docker.image.latex": "thanatchaya/latex",
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk",
      "tools": [
        "latexmk"
      ]
    },
    {
      "name": "pdflatex -> bibtex -> pdflatex*2",
      "tools": [
        "pdflatex",
        "bibtex",
        "pdflatex",
        "pdflatex"
      ]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-xelatex",
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "%DOC%"
      ]
    },
    {
      "name": "pdflatex",
      "command": "pdflatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
      ]
    },
    {
      "name": "bibtex",
      "command": "bibtex",
      "args": [
        "%DOCFILE%"
      ]
    }
  ],
  "gitlens.views.fileHistory.enabled": false,
  "gitlens.views.lineHistory.enabled": false,
  "gitlens.views.avatars": false
}
